{
  "name": "vsc-productivity-pack",
  "displayName": "VSC Productivity Pack",
  "description": "Productivity commands for Perforce annotate, Git blame, and temp file management",
  "version": "1.1.0",
  "publisher": "sparkskapil",
  "author": "Kapil Verma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sparkskapil/vsc-productivity-pack.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscpp.p4.annotate",
        "title": "VSC PP: Perforce Annotate Current File"
      },
      {
        "command": "vscpp.git.blame",
        "title": "VSC PP: Git Blame Current File"
      },
      {
        "command": "vscpp.cleanup",
        "title": "VSC PP: Clean Up Temporary Files"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
